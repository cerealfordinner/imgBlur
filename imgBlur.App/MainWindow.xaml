<Window x:Class="imgBlur.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- banner/haeder -->
        <Border Background="Gray" Grid.Row="0">
            <TextBlock Text="imgBlur" FontSize="24" Foreground="White" HorizontalAlignment="Center"></TextBlock>
        </Border>

        <!-- Controls -->
        <Grid Grid.Row="2">
            <Button Content="Open" Click="Blur_Click"></Button>
            <Button Content="Blur" Click="Blur_Click"></Button>
        </Grid>
    </Grid>
</Window>